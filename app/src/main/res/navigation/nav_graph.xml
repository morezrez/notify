<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/notesFragment">

    <fragment
        android:id="@+id/notesFragment"
        android:name="mamali.qa.notify.NotesFragment"
        android:label="fragment_notes"
        tools:layout="@layout/fragment_notes" >
        <action
            android:id="@+id/action_notesFragment_to_noteDetailsFragment"
            app:destination="@id/noteDetailsFragment" />
        <argument
            android:name="parent"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="root" />
        <action
            android:id="@+id/action_notesFragment_self"
            app:destination="@id/notesFragment" />
        <argument
            android:name="parentId"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/noteDetailsFragment"
        android:name="mamali.qa.notify.NoteDetailsFragment"
        android:label="fragment_note_details"
        tools:layout="@layout/fragment_note_details" >
        <argument
            android:name="parent"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="root" />
        <argument
            android:name="parentId"
            app:argType="integer" />
    </fragment>
</navigation>