<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layoutDirection="ltr"
    app:cardCornerRadius="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/file_icon_vector"
            android:layout_width="18dp"
            android:layout_height="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/file_icon_circle_highlight"
            app:layout_constraintEnd_toEndOf="@+id/file_icon_circle_highlight"
            app:layout_constraintStart_toStartOf="@+id/file_icon_circle_highlight"
            app:layout_constraintTop_toTopOf="@+id/file_icon_circle_highlight"
            app:srcCompat="@drawable/file_icon_vector"
         />

        <ImageView
            android:id="@+id/file_icon_circle_highlight"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/file_icon_circle_highlight"
            />

        <ImageView
            android:padding="16dp"
            android:id="@+id/option_blub_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/option_blub_icon" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="20dp" />


        <TextView
            android:id="@+id/file_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/iraniansans"
            android:textColor="@color/file_title_color"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/file_detail_txt"
            app:layout_constraintEnd_toStartOf="@+id/file_icon_circle_highlight"
            tools:text="کلاس زبان" />

        <TextView
            android:id="@+id/file_detail_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iraniansans"
            android:textColor="@color/file_detail_color"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/file_title_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            android:text="حاوی ۱۵ یادداشت" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

